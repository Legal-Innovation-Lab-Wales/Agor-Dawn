<section class="users show">
  <div class="container">
    <div class="main-svg"></div>
    <div class="bio">
      <div class="avatar">
        <%= image_tag url_for(@user.avatar), class: 'user-icon img-lg', alt: 'avatar' %>
      </div>
      <h1><%= @user.full_name %></h1>
      <p><%= @user.bio %></p>
      <div class="stats">
        <div class="stats-row">
          <i class="fas fa-comments"></i> 
          <%= "#{@user.comments_posted} comments posted" %>
          <div class="dot">·</div>
          <%= "#{@user.comments_received} received" %>
        </div>
        <div class="stats-row">
          <i class="fas fa-thumbs-up"></i>
          <%= "#{@user.likes_given} likes given" %>
          <div class="dot">·</div>
          <%= "#{@user.likes_received} received" %>
        </div>
      </div>
    </div>
  </div>
  <div class="collection-summary">
    Showing <%= @user.projects.is_public.length %> of <%= pluralize(@user.projects.length, 'project') %>
  </div>
  <hr>
  <div class="project-card-collection">
    <% @user.projects.each do |project| %>
      <%= render 'projects/project_card', locals: { project: project } %>
    <% end %>
  </div>
</section>