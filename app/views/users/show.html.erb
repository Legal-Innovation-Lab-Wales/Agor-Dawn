<section class="users show">
  <div class="container">
    <div class="banner"></div>
    <div class="bio">
      <div class="avatar">
        <img class="image" src=<%= @user.avatar %> alt="avatar">
      </div>
      <h1><%= "#{@user.first_name} #{@user.last_name}" %></h1>
      <p><%= @user.bio %></p>
      <p>Member since <%= @user.created_date %> | Last online <%= @user.last_update_date%> </p>
      <p><i class="fas fa-comments"></i> <%= @comments_count %> posted</p>
    </div>
  </div>
  <%= render 'projects/project_card_collection', projects: @user.projects.all %>
</section>