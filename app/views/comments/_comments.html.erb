<% @comments.each do |comment| %>
  <% unless comment.replaced_by.present? %>
    <div class="comment container">
      <div class="comment-header">
        <%= render 'shared/author_info', entity: comment %>
        <div class="comment-actions">
          <% if comment.owner?(current_user) || current_user.admin %>
            <% if comment.owner?(current_user) %>
              <div class="link link-primary" data-toggle="tooltip" data-placement="bottom" title="Edit">
                <i class="fas fa-edit"></i>
              </div>
            <% end %>
            <%= link_to project_comment_path(@project, comment), method: :delete, class: 'link link-secondary-1', data: { confirm: 'Are you sure you want to delete this comment?', toggle: 'tooltip', placement: 'bottom' }, title: 'Delete' do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          <% end %>
        </div>
      </div>
      <hr>
      <div class="comment-text">
        <%= comment.comment_text %>
      </div>
    </div>
  <% end %>
<% end %>