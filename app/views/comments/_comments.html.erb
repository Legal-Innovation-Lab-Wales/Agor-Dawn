<% @comments.each do |comment| %>
  <div class="comment container">
    <div class="comment-header">
      <%= render 'shared/author_info', entity: comment %>
      <% if comment.user == current_user || current_user.admin %>
        <%= link_to project_comment_path(@project, comment), method: :delete, class: 'link-secondary-1', data: { confirm: 'Are you sure you want to delete this comment?' } do %>
          Delete <i class="fas fa-trash-alt"></i>
        <% end %>
      <% end %>
    </div>
    <hr>
    <div class="comment-text">
      <%= comment.comment_text %>
    </div>
  </div>
<% end %>