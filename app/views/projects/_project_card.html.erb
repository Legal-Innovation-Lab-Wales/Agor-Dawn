<div class="project-card">
  <div class="card-outer-1">
    <div class="card-outer-2">
      <div class="card-content">
        <h2 class="name"><%= locals[:project].name %></h2>
        <p class="summary"><%= locals[:project].summary %></p>
        <p class="owner"><%= locals[:project].user.first_name + ' ' + locals[:project].user.last_name %></p>
        <p class="created-date"><%= locals[:project].created_date %></p>
        <% unless locals[:hide_description].present? %>
        <p class="like_count">
          Number of likes: <%= @project.likes.count %>
          <% if user_signed_in? %>
            <% if @like.present? %>
              <%= link_to project_like_path(@project, @like), method: 'delete', class: 'btn btn-primary' do %>
                <i class="fas fa-thumbs-down"></i> Unlike
              <% end %>
            <% else %>
              <%= link_to project_likes_path(@project), method: 'post', class: 'btn btn-primary' do %>
                <i class="fas fa-thumbs-up"></i> Like
              <% end %>
            <% end %>
          <% end %>
          <p class="description"><%= locals[:project].description %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>