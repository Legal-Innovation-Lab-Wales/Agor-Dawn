<div class="project-card">
  <div class="card-outer-1">
    <div class="card-outer-2">
      <div class="card-content">
        <%= link_to project_path(locals[:project]) do %>
          <div class="main">
            <h2 class="name"><%= locals[:project].name %></h2>
            <p class="summary"><%= locals[:project].summary %></p>
          </div>
        <% end %>
        <% unless locals[:hide_description].present? %>
          <div class="trix-content"><%= locals[:project].content %></p></div>
        <% end %>
        <hr>
        <div class="footer">
          <%= link_to user_path(locals[:project].user) do %>
            <div class="left">
              <img class="image" src=<%= locals[:project].user.avatar %> alt="avatar">
              <p class="owner"><%= locals[:project].user.first_name + ' ' + locals[:project].user.last_name %></p>
            </div>
          <% end %>
          <div class="right">
            <p class="metadata"><%= locals[:project].created_date %> <i class="fas fa-calendar-alt"></i></p>
            <p class="metadata"><%= locals[:project].view_count %> <i class="fas fa-eye"></i></p>
            <p class="metadata"><%= locals[:project].likes.count %> <i class="fas fa-thumbs-up"></i></p>
            <p class="metadata"><%= locals[:project].comments.count %> <i class="fas fa-comments"></i></p>
          </div>
        </div>
        <% unless locals[:hide_description].present? %>
          <div class="like-count">
            <% if @like.present? %>
              <%= link_to project_like_path(@project, @like), method: 'delete', class: 'btn btn-primary like' do %>
                <i class="fas fa-thumbs-down"></i>
              <% end %>
            <% else %>
              <% if user_signed_in? %>
                <%= link_to project_likes_path(@project), method: 'post', class: 'btn btn-primary like' do %>
                  <i class="fas fa-thumbs-up"></i>
                <% end %>
              <% else %>
                <%= link_to new_user_session_path, class: 'btn btn-primary like',
                            data: { confirm: 'To do this action you must login.' } do %>
                  <i class="fas fa-thumbs-up"></i>
                <% end %>
              <% end %>
            <% end %>
            <div class="count" title="<%= @liked_by %>" data-toggle="tooltip" data-placement="bottom">
              <%= @project.likes.count %>
            </div>
          </div>
        <% end %> 
      </div>
    </div>
  </div>
</div>