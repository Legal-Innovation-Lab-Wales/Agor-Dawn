<section class="projects show">
  <% if @project.user == current_user %>
    <div class="actions">
      <span class="public">
        <% if @project.public %>
          <i class="fas fa-eye"></i> Public
        <% else %>
          <i class="fas fa-eye-slash"></i> Private
        <% end %>
      </span>
      <%= link_to edit_project_path, class: 'btn btn-primary' do %>
        <i class="fas fa-edit"></i> Edit
      <% end %>
    </div>
  <% end %>
  <%= render 'project_card', locals: { project: @project } %>
  <div class="comments">
    <div class="row d-flex">
      <% @project.comments.each do |comment| %>
        <div class="col-md-11 col-lg-9 col-xl-7">
          <div class="d-flex flex-start mb-4">
            <img
              class="rounded-circle me-3"
              src=<%= comment.user.avatar %>
                alt="avatar">
            <div class="card">
              <div class="card-body">
                <h5><%= comment.user.first_name %></h5>
                <p class="small">5 hours ago</p>
                <p><%= comment.comment %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="d-flex align-items-center">
                    <a href="#!" class="link-muted me-2"><i class="fas fa-thumbs-up me-1"></i>158</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>