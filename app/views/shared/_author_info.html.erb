<div class="author-info">
  <div class="outer">
    <%= link_to user_path(entity.user) do %>
      <div class="left">
        <%= image_tag url_for(entity.user.avatar), class: 'user-icon img-sm', alt: 'avatar' %>
      </div>
    <% end %>
    <div class="right">
      <%= link_to user_path(entity.user), class: 'author-info-link' do %>
        <div class="owner"><%= entity.user.full_name %></div>
      <% end %>
      <div class="date">
        <% if entity.created_at > 1.day.ago %>
          <%= time_ago_in_words(entity.created_at) %> ago
        <% else %>
          <i class="far fa-calendar-alt"></i> <%= entity.created_date %>
          <div class="dot">·</div>
          <i class="far fa-clock"></i> <%= entity.created_time %>
        <% end %>
        <% if entity.class == Comment && entity.replacing.present? %>
          <div class="dot">·</div>
          <%= link_to root_path, class: 'edited author-info-link' do %>
            <i class="fas fa-history"></i>Edited
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>