<div class="modal" data-modal="flag-modal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5>Flag</h5>
        <button type="button" class="btn btn-primary" data-close-modal="flag-modal">
          <i class="fas fa-times-circle"></i>
        </button>
      </div>
      <section class="flag-modal form container">
        <div class="field">
          <%= form_with model: Flag.new do |f| %>
            <%= f.hidden_field :resource_type, required: true %>
            <%= f.hidden_field :resource_id, required: true %>
            <%= f.label :reason %>
            <%= f.text_area :reason, class: 'reason', required: true %>
            <%= f.submit %>
          <% end %>
        </div>
      </section>
    </div>
  </div>
</div>
<div class="modal-backdrop fade show" id="backdrop" style="display: none;"></div>
